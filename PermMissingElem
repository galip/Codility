package lesson3;

public class PermMissingElem {
	public static void main(String args[]) {
		int[] array = { 2, 3, 1, 5 };
		PermMissingElem permMissingElem = new PermMissingElem();
		int result = permMissingElem.solution(array);
		System.out.println(result);
	}

	public static int solution(int[] A) {
		boolean found = false;
		boolean localFound = false;
		int previousMinValue = 1;
		int currentMinValue = 1;
		int length = A.length;
		int i = 0;
		int j = 0;
		while (i < length && found == false) {
			localFound = false;
			while (j < length && localFound == false) {
				if (A[j] == previousMinValue) {
					currentMinValue++;
					localFound = true;
				}
				j++;
			}
			i = 0;
			j = 0;
			if (localFound == false) {
				found = true;
			}
			previousMinValue = currentMinValue;
		}
		return currentMinValue;
	}
}
